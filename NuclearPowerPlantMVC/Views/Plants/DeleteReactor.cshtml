@using System.Text.RegularExpressions;
@model Reactor

@{
	ViewData["Title"] = "Delete Reactor";
}


<div class="w-75 mx-auto">
	<h2>Are you sure you want to delete this reactor?</h2>
	<div class="card bg-light my-3">
		<div class="card-body">
			<div class="d-flex flex-row-reverse">
				<h4 style="margin-right: auto;" class="px-2">Reactor @Model.Id</h4>
			</div>
			<table class="table">
				<tbody>
					<tr>
						<th style="width: 30%;">@Html.DisplayNameFor(x => x.EnergyProduction)</th>
						<td>@Model.EnergyProduction</td>
					</tr>
					<tr>
						<th>@Html.DisplayNameFor(x => x.IsOn)</th>
						@if (Model.IsOn)
						{
							<td class="text-success"><b>On</b></td>
						}
						else
						{
							<td class="text-danger"><b>Off</b></td>
						}
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<form method="post" asp-action="DeleteReactorConfirmed">
		<input type="hidden" asp-for="@Model.Id"/>
		<button type="submit" class="btn btn-danger">Delete</button>
	</form>
	<a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</div>